<% (@orders.sort_by {|e| e.status}.reverse).each do |order|%>

  <div class='kitchen__order__status <%= statusColorCard(order) %>'>
    <div class='kitchen__order '>
    
      <div class='kitchen__order__info'>
        <div>
          <p>Order ID: <%= order.id %></p>
        </div>
        <div>
        <% @tables.each do |table| %>
          <p class='kitchen__order__info__table'><%= table.name if order.tables_id == table.id %></p>
        <% end %>
        </div>
        <button class='kitchen__order__info__button' id='btn-more-info'>More info</button>
      </div>

      <div class='kitchen__order__items'>
      <% @orderItems.each do |orderitem| %>
        <% @items.each do |item| %>
        <p class='kitchen__order__item'> 
            <%= 
              getItembyID = orderitem.items_id if orderitem.orders_id == order.id 
              if getItembyID == item.id
                getItemName = item.name
              end
            %> 
        </p>
        <% end %>
      <% end %>
      </div>

      <div class='kitchen__order__notes' >
        <p>Notes:</p>
        <p> <%= order.note %> </p>
      </div>
      <%= button_to "#{statusColorBtn(order)}", 
        update_status_kitchen_path(order), 
        class: "kitchen__order__button #{statusText(order)}", 
        method: :patch %>
    </div>
  </div>
<% end %>