<%= form_with model: @item do |form| %>
  <div class="info-container">
    <%= form.text_field :name, :required => true, placeholder: "Name" %>
  </div>
  <div class="info-container">
    <%= form.number_field :price, :required => true, placeholder: "Price" %>
  </div>
  <div class="info-container">
    <%= form.text_field :category, :required => true, placeholder: "Category" %>
  </div>
  <div class="info-container">
    <%= form.text_field :image, :required => true, placeholder: "Image" %>
  </div>
  <div class="button-container">
    <%= form.submit %>
  </div>
<% end %>
