<%= form_with(model: @item, html: { class: "form" }) do |form| %>
  <div class="info-container">
    <%= form.text_field :name, :required => true, placeholder: "Name" %>
  </div>
  <div class="info-container">
    <%= form.number_field :price, :required => true, placeholder: "Price" %>
  </div>
  <div class="info-container">
    <%= form.select :category, ["Starter", "Main", "Drink", "Dessert"] %>  
  </div>
  <div class="info-container">
    <%= form.file_field :image, :required => true, placeholder: "Image", class: "file-select"%>
  </div>
  <div class="info-container">
      <%= form.hidden_field :recipe, value: "" %>
  </div>
  <div class="button-container">
    <div class="info-container">
      <div class="recipe">Create item</div>
    </div>
    <%= link_to items_path do %>
      <button>Cancel</button>
    <% end %>
  </div>
<% end %>
<%=  javascript_include_tag 'recipe-modal' %>
