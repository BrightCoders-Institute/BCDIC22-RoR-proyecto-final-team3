<%= render 'shared/navbarAdmin' %>
<div class="container">
  <div class="titulo">
    <h1 class="texto"><%= @start_date.strftime('%A, %b %d') %></h1>
  </div>
  <div class="scores">
    <div class="tarjeta" style="<% if @previous_total && @total %>
                              background-color: <%= @previous_total > @total ? 'rgba(213, 30, 30, 0.6)' : 'rgba(164, 223, 125, 0.6)' %>;
                            <% end %>">
      <div class="two alt-two">
        <h4><%= @text %> = $<%= @previous_total %></h4>
        <h1 class="tarjeta-texto">$<%= @total %>
          <span class="tarjeta-texto">Todays Money</span>
        </h1>
      </div>
    </div>

    <div class="tarjeta" style="<% if @previous_orders && @orders %>
                              background-color: <%= @previous_orders > @orders ? 'rgba(213, 30, 30, 0.6)' : 'rgba(164, 223, 125, 0.6)' %>;
                            <% end %>">
      <div class="two alt-two">
        <h4><%= @text %> = <%= @previous_orders %></h4>
        <h1 class="tarjeta-texto"><%= @orders %>
          <span class="tarjeta-texto">Orders Numbers</span>
        </h1>
      </div>
    </div>
    <div class="tarjeta" style="<% if @previous_max_order && @max_order %>
                              background-color: <%= @previous_max_order > @max_order ? 'rgba(213, 30, 30, 0.6)' : 'rgba(164, 223, 125, 0.6)' %>;
                            <% end %>">
      <div class="two alt-two">
        <h4><%= @text %> = $<%= @previous_max_order %></h4>
        <h1 class="tarjeta-texto">$<%= @max_order %>
          <span class="tarjeta-texto">Best Sell</span>
        </h1>
      </div>
    </div>
  </div>
  <div class="reports">
    <div class="grafica estilo">
      <%= line_chart @data, title: 'Actual Date', dataset: { borderColor: 'green', pointBackgroundColor: 'dark' }, height: '200px'%>

    </div>
    <div class="grafica estilo">
      <%= line_chart @previous_data, title: 'Last Date', dataset: {  borderColor: 'gray', pointBackgroundColor: 'dark'}, height: '200px'%>
    </div>
  </div>
  <div class="seleccion">
    <div class="dias estilo">
      <div class="dias-titulo">
        Select date
      </div>
      <div class="date">
        <%= form_tag reports_path, method: :get do %>
          <%= text_field_tag :start_date, nil, style: 'display:none;', id: 'datepicker-input' %>
          <div id="container"></div>
        <%# <%= date_field_tag :start_date, nil, type: :date, class: 'hidden' %>
        <%= submit_tag "Show report", class: 'myButton' %>
      <% end %>
      </div>
    </div>
    <div class="botones">
      <%= form_tag reports_path, method: :get do %>
        <div class="btn-group" role="group" aria-label="Period">
          <%= button_tag "Last 7 days", type: :submit, name: "period", value: "7_days", class: "btn-date" %>
          <%= button_tag "Last 14 days", type: :submit, name: "period", value: "14_days", class: "btn-date" %>
          <%= button_tag "Last month", type: :submit, name: "period", value: "1_month", class: "btn-date" %>
        </div>
      <% end %> 
    </div>
  </div>
</div>