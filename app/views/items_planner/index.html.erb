<%= render 'shared/navbarAdmin' %>
<main class="service-main-container">
  <div class="planner-section">
    <div class="head-cards">
      <div class="dropdown">
      </div>
      <div class="dropdown">
      </div>
      <%= link_to inventory_index_path do %>
        <button class="dropdown">Inventory</button>
      <% end %>
    </div>
    <article class="planner-container">
      <div class="main-planner-container">
        <table class="planner-table">
          <thead>
            <tr >
              <th>Category</th>
              <th>Name</th>
              <th>Qty Available</th>
              <th>Average 15-day sales</th>
              <th>Two months sales</th>
              <th>Sales Value</th>
              <th>Sales Earned</th>
              <th>Status</th>
              <th>Edit</th>
            </tr>
          </thead>
          <tbody>
            <% @items.each do |item| %>
              <tr class="items-row">
                <td class="items-planner-image"><%=image_tag item.image%></td>
                <td class="items-planner-id"><%= item.id%></td>
                <td class="items-planner-price"><%= item.price %></td>
                <td class="items-planner-category"><%= item.category %></td>
                <td class="items-planner-name" ><%= item.name %></td>
                <td class="items-planner-description" ><%= item.description %></td>
                <td><%= item.available_qty %></td>
                <td class="items-planner-avg"><%= item.average %></td>
                <td><%= item.sales %></td>
                <td>350</td>
                <td>503</td>
                <td>
                  <% if item.status == "short" %>
                    <div class="status-short">Short</div>
                  <% elsif item.status == "good" %>
                    <div class="status-good">Good</div>
                  <% elsif item.status == "low" %>
                    <div class="status-low">Low</div>
                  <% end %>
                </td>
                <td><button class= "button-planner-edit"><%=image_tag("edit-planner.svg")%></button></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </article>
  </div>
  <div class="item-planner-container">
    <div class="item-planner-image-container">
      <%=image_tag("pexels-jonathan-borba-2983101.jpg")%>
    </div>
    <div class="item-name-footer">
      <h3 class= "planner-item-name"> -- </h3>
      <div class="status-planner-edit">
        <h3>Status: </h3>
        <div class="status-lamp">
          <p>Good</p>
        </div>
      </div>
    </div>
    <div class="planner-edit-info">
      <div class="item-info-container">
        <h3>Category:</h3>
        <div class="item-info-label">
          <p class= "planner-item-category">Food</p>
          <span><%=image_tag("lunch_dining_black_24dp.svg")%></span>
        </div>
        <h3>Price:</h3>
        <div class="item-info-label">
          <p class= "planner-item-price">--</p>
          <span>$</span>
        </div>
        <h3>Description:</h3>
        <div class="item-info-description">
        </div>
        <h3>Recipe:</h3>
        <div class="item-info-recipe">
          <table class="planner-recipe-table">
            <thead>
              <tr >
                <th>Ingredient</th>
                <th>Qty</th>
                <th>available</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody class= "rows-ingredients-container">
              <tr class="items-row-sidebar">
                <td class = "ingredient-name-column"> -- </td>
                <td class = "ingredient-qty-column"> -- </td>
                <td class = "ingredient-available-column"> -- </td>
                <td class="ingredient-status-column">inactive</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
</main>
<%=  javascript_include_tag 'planner' %>
