<div class="row ">

  <div class="column img">
    <div class="overlay">
      <div class="logo">
          <%=image_tag("1.png")%>
      </div>
    </div>
  </div>

  <div class="column center">
    <%=image_tag("icon3.png", class: "icon") %>
    <h3>Welcome Back!</h3>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "User", class: "user_field" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "password_field" %>
      </div>

      <div class="fields_login">
      <% if devise_mapping.rememberable? %>
        <div class="field remember_field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

      </div>
      <div class="actions">
        <%= f.submit "Log in" %>
      </div>
    <% end %>

  </div>

</div>
