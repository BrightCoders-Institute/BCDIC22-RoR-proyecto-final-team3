<%= form_with model: @ingredient do |form| %>
  <div class="info-container">
    <%= form.text_field :name, :required => true, placeholder: "Name" %>
  </div>
  <div class="info-container">
    <%= form.select :quant, ["grams", "mililiters"] %>  
  </div>
  <div class="info-container">
    <%= form.number_field :price, step: 0.01, min: 0, :required => true, placeholder: "Price" %>
  </div>
  <div class="button-container">
    <%= form.submit %>
    <%= link_to ingredients_path do %>
      <button>Cancel</button>
    <% end %>
  </div>
<% end %>
